
@{
    ViewBag.Title = "Chỉnh Sửa Câu Hỏi ";
    Layout = "~/Areas/LoginAdmin/Views/Shared/_LayoutAdmin.cshtml";
}
@model QLBANDTDD.Models.CauHoi
<div >
    <a href="@Url.Action("Index","HoiDap")" class="le-button">Danh Sách Câu Hỏi</a>
</div>
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    <form>
        @Html.HiddenFor(model => model.Id)
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-10">
                    <label>Họ Tên :</label>
                    @Html.EditorFor(model => model.TenNguoiHoi, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label>Số Điện Thoại :</label>
                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label>Tiêu Đề :</label>
                    @Html.EditorFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label>Nội Dung :</label>
                    @Html.TextAreaFor(m => m.NoiDung, new { @class = "form-control", @rows = "8" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label>Ngày Hỏi :</label>
                    @Html.EditorFor(model => model.NgayHoi, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-9">
                    <label>Cho Phép Hiển Thị :</label>
                    @Html.EditorFor(m =>m.HienThi)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-7 col-lg-5">
                    <button type="submit" class="btn btn-info"><i class="fa fa-floppy-o"> Lưu</i> </button>
                    <button type="button" onclick="window.location = '/hoi-dap'" class="btn btn-default">Hủy</button>
                </div>
            </div>
            </div>
    </form>
}
