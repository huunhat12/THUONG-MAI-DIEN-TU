
@{
    ViewBag.Title = "Thêm Mới Sản Phẩm";
    Layout = "~/Areas/LoginAdmin/Views/Shared/_LayoutAdmin.cshtml";
}
@model QLBANDTDD.Areas.SanPhams.Models.SanPhamModel
<div>
    <a href="@Url.Action("Index","SanPham")" class="le-button">Danh Sách Sản Phẩm</a>
</div>
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" });
    <form>
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-10">
                    <label>Tên Sản Phẩm :</label>
                    @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-5">
                    <label>Loại Sản Phẩm :</label>
                    @Html.DropDownList("LoaiSP", null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.LoaiSP, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-5">
                    <label>Hãng Sản Xuất :</label>
                    @Html.DropDownList("HangSX", null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.HangSX, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    <label>Xuất Xứ :</label>
                    @Html.EditorFor(model => model.XuatXu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.XuatXu, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    <label>Giá Gốc :</label>
                    @Html.EditorFor(model => model.GiaGoc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GiaGoc, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    <label>Giá Tiền :</label>
                    @Html.EditorFor(model => model.GiaTien, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GiaTien, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label>Mô Tả :</label>
                    @Html.TextAreaFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6 col-sm-3">
                    <label>Hình Ảnh :</label>
                    @Html.EditorFor(model => model.HinhAnh, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
                    <br />
                    <input type="button" id="chonanh" value="Chọn Ảnh" class="btn btn-success">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6 col-sm-3">
                    <label>Ảnh Khác :</label>
                    @Html.EditorFor(model => model.AnhKhac, new { htmlAttributes = new { @class = "form-control" } })
                    @*@Html.ValidationMessageFor(model => model.AnhKhac, "", new { @class = "text-danger" })*@
                    <br />
                    <input type="button" id="chonanh1" value="Chọn Ảnh" class="btn btn-success">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    <label>Số Lượng :</label>
                    @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8">
                    <label>Cho phép hiển thị :</label>
                    @Html.EditorFor(model => model.HienThi)
                  @*  @Html.ValidationMessageFor(model => model.HienThi, "", new { @class = "text-danger" })*@
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8">
                    <label>Là sản phẩm mới :</label>
                    @Html.EditorFor(model => model.IsNew)
                    @*@Html.ValidationMessageFor(model => model.IsNew, "", new { @class = "text-danger" })*@
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8">
                    <label>Là sản phẩm Hot :</label>
                    @Html.EditorFor(model => model.IsHot)
                    @*@Html.ValidationMessageFor(model => model.IsHot, "", new { @class = "text-danger" })*@
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label>Từ Khóa :</label>&nbsp;
                    @Html.EditorFor(model => model.TuKhoa, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TuKhoa, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-7 col-lg-5">
                    <button type="submit" class="btn btn-info">Thêm </button>
                    <button type="button" onclick="window.location = '/san-pham'" class="btn btn-default">Hủy</button>
                </div>
            </div>
        </div>
    </form>
}
<script type="text/javascript">
        $(document).ready(function () {
            $("#chonanh").click(function (e) {
                e.preventDefault();
                var ckfinder = new CKFinder();
                ckfinder.selectActionFunction = function (fileUrl) {
                    $('#HinhAnh').val(fileUrl);
                };
                ckfinder.popup();
            })
        });
</script>
<script type="text/javascript">
        $(document).ready(function () {
            $("#chonanh1").click(function (e) {
                e.preventDefault();
                var ckfinder = new CKFinder();
                ckfinder.selectActionFunction = function (fileUrl) {
                    $('#AnhKhac').val(fileUrl);
                };
                ckfinder.popup();
            })
        });
</script>
<script type="text/javascript">
        CKEDITOR.replace("MoTa");
</script>
