
@{
    ViewBag.Title = "Sửa Hãng Sản Xuất";
    Layout = "~/Areas/LoginAdmin/Views/Shared/_LayoutAdmin.cshtml";
}
@model QLBANDTDD.Areas.HangSanXuats.Models.HangSXModel
<div>
    <a href="@Url.Action("Index","HangSanXuat")" class="le-button">Danh Sách Hãng Sản Xuất</a>
</div>
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" });
    <form>
        <div class="form-horizontal">
            @Html.HiddenFor(model=>model.Id)
            <div class="form-group">
                <div class="col-md-8">
                    <label>Tên Hãng Sản Xuất :</label>
                    @Html.EditorFor(model => model.TenHang, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenHang, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8">
                    <label>Trụ Sở Chính :</label>
                    @Html.EditorFor(model => model.TruSoChinh, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TruSoChinh, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8">
                    <label>Quốc Gia :</label>
                    @Html.EditorFor(model => model.QuocGia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.QuocGia, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8">
                    <label>Từ Khóa :</label>
                    @Html.EditorFor(model => model.TuKhoa, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TuKhoa, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8">
                    <label>Cho phép hiển thị :</label>
                    @Html.EditorFor(model => model.HienThi)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-5 col-lg-7">
                    <button type="submit" class="btn btn-info"><i class="fa fa-floppy-o"> Lưu</i> </button>
                    <button type="button" onclick="window.location = '/hang-san-xuat'" class="btn btn-default">Hủy</button>
                </div>
            </div>
        </div>
    </form>
}
